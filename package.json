{
  "name": "@transclusion/vdom",
  "version": "0.1.1",
  "main": "lib/main.js",
  "repository": "git@github.com:transclusion/vdom.git",
  "author": "Marius Lundg√•rd <studio@mariuslundgard.com>",
  "license": "MIT",
  "files": [
    "lib",
    "src"
  ],
  "pre-commit": [
    "flow-check",
    "lint",
    "test"
  ],
  "scripts": {
    "build": "yarn build-src && yarn build-src-flow",
    "build-src": "babel src --out-dir lib",
    "build-src-flow": "flow-copy-source -v src lib",
    "clean": "rimraf lib",
    "commit": "git-cz",
    "flow-check": "flow check",
    "lint": "eslint .",
    "prebuild": "yarn run clean",
    "prepublish": "yarn build",
    "release": "semantic-release --access public",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "devDependencies": {
    "@transclusion/semantic-release": "^0.2.5",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.1.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.49.1",
    "flow-copy-source": "^1.2.0",
    "flow-typed": "^2.1.2",
    "jest": "^20.0.4",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

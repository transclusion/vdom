{
  "name": "@transclusion/vdom",
  "version": "1.0.0-alpha.2",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "repository": "git@github.com:transclusion/vdom.git",
  "author": "Marius Lundg√•rd <studio@mariuslundgard.com>",
  "license": "MIT",
  "pre-commit": [
    "build",
    "lint",
    "test"
  ],
  "scripts": {
    "build": "npm-run-all tsc-*",
    "clean": "rimraf dist",
    "commit": "git-cz",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "release": "semantic-release --access public",
    "test": "jest",
    "test-watch": "jest --watch",
    "tsc-es5": "tsc -p tsconfig.commonjs.json",
    "tsc-es6": "tsc -p tsconfig.module.json"
  },
  "devDependencies": {
    "@transclusion/semantic-release": "^0.2.5",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "jest": "^21.1.0",
    "jest-cli": "^21.1.0",
    "npm-run-all": "^4.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.1",
    "ts-jest": "^21.0.1",
    "tslib": "^1.7.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(\\.|/)(test|spec)\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }
}

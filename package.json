{
  "name": "@transclusion/vdom",
  "version": "1.0.0-beta",
  "repository": "git@github.com:transclusion/vdom.git",
  "author": "Marius Lundg√•rd <studio@mariuslundgard.com>",
  "license": "MIT",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "typings": "dist/module/index.d.ts",
  "scripts": {
    "build": "npm-run-all tsc-*",
    "clean": "rimraf dist",
    "commit": "git-cz",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "tslint -c tslint.json '{src,test}/**/*.{ts,tsx}'",
    "prebuild": "npm run clean",
    "precommit": "npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run build",
    "prettier": "prettier --no-bracket-spacing --no-semi --print-width 120 --single-quote --write \"{src,perf/src,test}/**/*.{js,ts,tsx}\"",
    "release": "semantic-release --access public",
    "test": "jest --coverage",
    "test-watch": "jest --watch",
    "tsc-es5": "tsc -p tsconfig.commonjs.json",
    "tsc-es6": "tsc -p tsconfig.module.json"
  },
  "devDependencies": {
    "@transclusion/semantic-release": "^0.2.5",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "jest-cli": "^21.1.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.1",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "testRegex": "(\\.|/)(test|spec)\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": true
  }
}
